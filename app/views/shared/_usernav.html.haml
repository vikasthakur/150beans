%nav.usernav
  %section.toolbar
  %section.userbar
    %ul
      - if user_signed_in?
        %li= image_tag(current_user.avatar, :width => '36', :height => '36', :alt => "@#{current_user.name}", :class => "profile_image_small") if current_user.avatar
        %li
          %span!= link_to('Sign out', signout_path)
      - else
        %li= link_to('Sign in', signin_path)