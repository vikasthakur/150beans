<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Amount</th>
    <th>Notes</th>
    <th>Currency</th>
    <th>Exchange rate</th>
    <th>Account</th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.date %></td>
    <td><%= transaction.amount %></td>
    <td><%= transaction.notes %></td>
    <td><%= transaction.currency_id %></td>
    <td><%= transaction.exchange_rate %></td>
    <td><%= transaction.account.name %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_account_transaction_path %>
