# database template

base: &base
  adapter: sqlite3
  timeout: 5000

development:
  database: <%= shared_path %>/db/development.sqlite3
  <<: *base
test:
  database: <%= shared_path %>/db/test.sqlite3
  <<: *base

mysql_base: &mysql_base
  adapter: mysql
  host: <%= dbhost %>
  username: <%= dbuser %>
  encoding: utf8
  timeout: 5000

# uncomment below for multi-staged deployments
# staging:
#   database: <%= application %>_staging
#   password: <%### uncomment ###= Capistrano::CLI.ui.ask("Enter MySQL password for STAGING:") %>
#   <<: *mysql_base

production:
  database: <%= application %>_production
  password: <%= Capistrano::CLI.ui.ask("Enter MySQL password for PRODUCTION: ") %>
  <<: *mysql_base